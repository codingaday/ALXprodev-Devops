#!/bin/bash

# Directory to store all Pokémon JSON files
OUTPUT_DIR="pokemon_data"
mkdir -p "$OUTPUT_DIR"

# List of Pokémon to fetch
POKEMONS=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

# Base API URL
API_URL="https://pokeapi.co/api/v2/pokemon"

for pokemon in "${POKEMONS[@]}"; do
    echo "Fetching data for $pokemon..."
    
    # Make the API request and check HTTP status
    HTTP_CODE=$(curl -s "$API_URL/$pokemon" -w "%{http_code}" -o temp.json)
    
    if [[ $HTTP_CODE == 2* ]]; then
        # Save pretty-printed JSON
        jq . temp.json > "$OUTPUT_DIR/${pokemon}.json"
        echo "Saved data to $OUTPUT_DIR/${pokemon}.json ✅"
    else
        echo "❌ Failed to fetch data for $pokemon (HTTP $HTTP_CODE)"
    fi

    # Delay to avoid hitting API rate limits
    sleep 2
done

# Clean up temporary file
rm -f temp.json
